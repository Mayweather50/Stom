<table>
    <thead>
        <tr>
            <th>Code</th>
            <th>Name</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Code</td>
                <td>@item.Name</td>
                <td><button onclick="removeRow(this)">Close</button></td>



            </tr>
        }
    </tbody>
</table>



<script>
    function removeRow(button) {
        var row = button.parentNode.parentNode;
        row.remove();
    }
</script>



